<h1><%= @place["name"] %></h1>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
</p>
<div class="row">
<% for post in @posts %>
   <div class="col-xs-12 col-sm-6 col-md-4">
  <h3><%= post["title"] %></h3>
  <h4><%= post["posted_on"] %></h4>
  <p>
  <%if post.uploaded_image.attached?%>
  <img src="<%= url_for(post.uploaded_image) %>" alt="" class="img-fluid">
  <% end %>
  </p>
  <p><%= post["description"] %></p>
 
</div>
<% end %>
</div>


<p>
  <a href="/places">Back to all places</a>
</p>

<p>
<%= button_to "Delete this place", @place, :method => "delete" %>
</p>